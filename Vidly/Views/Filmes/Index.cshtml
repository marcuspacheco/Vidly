@model IEnumerable<Vidly.Models.Filme>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Filmes</h2>

@using (Html.BeginForm("Novo", "Filmes"))
{
    <button type="submit" class="btn btn-raised btn-primary">NOVO FILME</button>
}
<br />
@if (!Model.Any())
{
    <p>Nenhum filme cadastrado.</p>
}
else
{
    <div class="table-responsive">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Filme</th>
                    <th>Gênero</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var filme in Model)
                {
                    <tr>
                        <td>@Html.ActionLink(filme.Nome, "Editar", "Filmes", new { id = filme.Id }, null)</td>
                        <td>@filme.Genero.Nome</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}